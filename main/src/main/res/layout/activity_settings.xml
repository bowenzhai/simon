<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.uwaterloo.cs349.a4.main.SettingsActivity">

    <NumberPicker
        android:id="@+id/buttonsNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="32dp"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buttonsSetterTextView"
        android:layout_width="65dp"
        android:layout_height="17dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonsNumberPicker" />

    <NumberPicker
        android:id="@+id/difficultyNumberPicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginTop="32dp"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/difficultySetterTextView"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_marginEnd="84dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Difficulty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficultyNumberPicker" />
</android.support.constraint.ConstraintLayout>
